RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGS
# ============================================
LOG_LEVEL=debug

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:5173

# ============================================
# ANALYTICS (Opcional)
