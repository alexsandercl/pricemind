# Mercado Livre
ML_API_KEY=...
ML_API_SECRET=...

# Amazon
AMAZON_ACCESS_KEY=...
AMAZON_SECRET_KEY=...

# ============================================
# SENTRY (MONITORING) - Opcional
# ============================================
